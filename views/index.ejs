<DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <title>PETS CADASTRADOS</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    
    </head>
    
    
    <body>
    
    
        <div class="container">
            <div class="jumbotron">
                <!-- Cabeçalho da página -->
                <div class="row">
                    <h2>GESTÃO - PET <span class="badge text-bg-secondary"> v 2.0.0</span></h2>
                </div>
    
    
            </div>
            <div class="row">
                <P>
                    <a class="btn btn-success" href="/add">Adicionar</a>
                </P>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">NOME</th>
                            <th scope="col">COR</th>
                            <th scope="col">PORTE</th>
                            <th scope="col">RACA</th>
                            <th scope="col">ESPECIE</th>
                        </tr>
    
    
                    </thead>
                    <tbody>
                        <% pets.forEach(pet=> { %>
                            <tr>
                                <td>
                                    <%= pet.id %>
                                </td>
                                <td>
                                    <%= pet.nome %>
                                </td>
                                <td>
                                    <%= pet.cor %>
                                </td>
                                <td>
                                    <%= pet.especie %>
                                </td>
                                <td>
                                    <%= pet.porte %>
                                </td>
                                <td>
                                    <%= pet.raca %>
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="/edit/<%= pet.id %>">Editar</a>
                                    <a class="btn btn-danger" href="/dell/<%= pet.id %>">Excluir</a>
                                </td>
                            </tr>
                            <% }) %>
    
    
                    </tbody>
                </table>
            </div>
    </body>
    
    
    </html>
    